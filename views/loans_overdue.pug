extends layout.pug

block content
  h1 Overdue Loans
  p
    a.button(href='new_loan') Create New Loan
  p
    | Filters 
    a(href='loans') All
    |  | 
    a(href='overdue_loans') Overdue
    |  | 
    a(href='checked_loans') Checked Out
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action
    tbody
      each book in overdue
        tr
          td
            a(href= `book_details/${book.Book.id}`) #{book.Book.title}
          td
            a(href=`patron_details/${book.patron_id}`) #{book.Patron.first_name} #{book.Patron.last_name}
          td #{book.loaned_on}
          td #{book.return_by}
          td #{book.returned_on}
          td
            a.button(href='return_book') Return Book