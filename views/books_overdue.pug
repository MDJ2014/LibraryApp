extends layout.pug

block content
  h1 Overdue Books
  p
    a.button(href='new_book') Create New Book
  p
    | Filters 
    a(href='books') All
    |  | 
    a(href='overdue_books') Overdue
    |  | 
    a(href='checked_books') Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in overdue
        tr
          td
            a(href= `book_details/${book.Book.id}`) #{book.Book.title}
          td #{book.Book.author}
          td #{book.Book.genre}
          td #{book.Book.first_published}